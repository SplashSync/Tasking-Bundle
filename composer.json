{
    "name":         "splash/tasking-bundle",
    "description":  "Advanced Tasking Bundle for Symfony Applications (100% PHP)",
    "type":         "symfony-bundle",
    "keywords":     ["Symfony", "Bundle", "Task", "PHP", "Tasking"],
    "homepage":     "http://www.splashsync.com",
    "license":      "MIT",
    "prefer-stable": true,
    
    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "autoload": {
        "psr-4": { "Splash\\Tasking\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Splash\\Tasking\\Tests\\": "tests" },
        "classmap": [ "app/AppKernel.php" ]
    },
    
    "require": {
        "php":                                          "^7.2",
        
        "symfony/symfony":                              "~4.4",
        "symfony/monolog-bundle":                       ">=2.1",
        
        "doctrine/orm":                                 "^2.5",
        "doctrine/doctrine-bundle":                     "^1.6",
        "doctrine/doctrine-cache-bundle":               "^1.2",
        
        "sonata-project/admin-bundle":                  ">3.0",
        "sonata-project/doctrine-orm-admin-bundle":     "*"
    },    
    
    "require-dev": {
        "phpunit/phpunit":                              ">7",
        "symfony/phpunit-bridge":                       "^3.0",
        "sentry/sentry-symfony":                        "^3.1",
        
        "splash/php-bundle":                            "dev-master",
        "splash/phpcore":                               "dev-master",
        "splash/console":                               "dev-master",

        "composer/composer":                            "^1.5",
        "j13k/yaml-lint":                               "^1.1",
        "php-parallel-lint/php-parallel-lint":          "^1.0",
        "phpmd/phpmd":                                  "~2.7.0",
        "phpro/grumphp":                                "^0.16",
        "sclable/xml-lint":                             "^0.2.4",
        "sebastian/phpcpd":                             ">3.0",
        "seld/jsonlint":                                "^1.7",
        "sensiolabs/security-checker":                  "*",
        "squizlabs/php_codesniffer":                    "^3.2",
        "escapestudios/symfony2-coding-standard":       "^3.4",
        "friendsofphp/php-cs-fixer":                    "*",        
        
        "phpstan/phpstan":                              "^0.12",
        "phpstan/phpstan-strict-rules":                 "^0.12",
        "phpstan/phpstan-doctrine":                     "^0.12",
        "phpstan/phpstan-phpunit":                      "^0.12",
        "phpstan/phpstan-symfony":                      "^0.12"        
    },
    
    "scripts": {
        "post-install-cmd": [
            "php vendor/bin/grumphp git:deinit"            
        ],
        "post-update-cmd": [
            "php vendor/bin/grumphp git:deinit"            
        ]
    },

    "config": {
        "preferred-install":                        "dist",
        "platform": {
            "php": "7.3.0"
        }
    },

    "extra": {
        "symfony-web-dir": "web",
        "symfony-public-dir": "web"
    }    
}